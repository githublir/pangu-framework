<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
        PUBLIC "-//ibatis.apache.org//DTD Config 3.0//EN"
        "http://ibatis.apache.org/dtd/ibatis-3-config.dtd">

<!-- MyBatis数据持久层配置文件 -->
<configuration>

	<!-- 参数设置 -->
	<settings>
		<!-- 在这开启缓存后，必须在对应的sqlmap文件中也使用<cache/>标签后对应的sql文件才会启用缓存功能，缺省一个命名空间作为一个缓存域， 每个缓存域下的select缺省开启缓存功能。具体的SQL也有缓存属性开关可以控制。 -->
		<!-- ！！特别提示：平台提供了自己的缓存实现，不建议使用mybatis缓存。平台缓存用法请参阅相关文档。 -->
		<setting name="cacheEnabled" value="false" />
	</settings>

	<!-- 通用别名设置 
	<typeAliases>
		<typeAlias type="cn.osworks.aos.base.typewrap.impl.HashDto" alias="Dto" />
	</typeAliases>
	-->

	<!-- 插件 -->
	<plugins>
		<!-- StatementHandler插件：实现分页和动态排序 -->
		<plugin interceptor="cn.osworks.aos.core.dao.plugin.StatementHandlerPlugin">
			<property name="sqlid" value=".*Page.*" />
		</plugin>
	</plugins>

</configuration>